{{#each erros}}
    <div class="alert alert-danger">{{texto}}</div> <!-- para cada erro vai printar -->
{{else}}

{{/each}}

<div class="card">
    <div class="card-body">
        <h4>Editar postagem</h4>
        <br>
        <form action="/admin/postagem/edit" method="POST">
            <input type="hidden" value="{{postagem._id}}" name="id">
            <label for="anoFabricacao">Ano de fabricação: </label>
            <input type="text" name="anoFabricacao" class="form-control" value="{{postagem.anoFabricacao}}">
            <label for="cor">Cor: </label>
            <input type="text" name="cor" class="form-control" value="{{postagem.cor}}">
            <label for="preco">Preço: </label>
            <input type="text" name="preco" class="form-control" value="{{postagem.preco}}">
            <label for="descricao">Descrição: </label>
            <textarea name="descricao" class="form-control">{{postagem.descricao}}</textarea>
            <br>
            <label for="veiculo">Veiculo: </label>
            <select name="veiculo" class="custom-select">
                {{#each veiculo}}
                    <option value="{{_id}}">{{nome}}</option>
                {{else}}
                    <option value="0">Nenhum veiculo registrado</option>
                {{/each}}
               
            </select>
            <br>
            <br>
            <button class="btn btn-success" type="submit">Editar postagem</button>
        </form>
    </div>
</div>