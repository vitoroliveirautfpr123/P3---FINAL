{{#each erros}}
    <div class="alert alert-danger">{{texto}}</div> <!-- para cada erro vai printar -->
{{else}}
{{/each}}
<div class="card">
    <form action="/admin/cad/edit" method="POST">
        <input type="hidden" name="id" value="{{veiculo._id}}">
        <label for="nome">Nome: </label>
        <input type="text" id="nome" name="nome" placeholder="Nome do veiculo" class="form-control" value="{{veiculo.nome}}">
        <br>
        <label for="marca">Marca: </label>
        <input type="text" id="marca" name="marca" placeholder="Nome da marca" class="form-control" value="{{veiculo.marca}}">
        <br>
        <button type="submit" class="btn btn-success">Editar veiculo</button>
    </form>
</div>  