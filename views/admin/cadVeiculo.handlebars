    <div class="alert alert-danger">{{texto}}</div> <!-- para cada erro vai printar -->
{{else}}
{{/each}}
<div class="card">
    <form action="/admin/cad/add" method="POST">
        <label for="nome">Nome: </label>
        <input type="text" id="nome" name="nome" placeholder="Nome do veiculo" class="form-control">
        <br>
        <label for="marca">Marca: </label>
        <input type="text" id="marca" name="marca" placeholder="Nome da marca" class="form-control">
        <br>
        <button type="submit" class="btn btn-success">Cadastrar veiculo</button>
    </form>
</div>