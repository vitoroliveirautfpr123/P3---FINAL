{{#each erros}}
    <div class="alert alert-danger">{{texto}}</div>
{{else}}


{{/each}}
<h3>Crie sua conta hoje !</h3>   
<div class="card">
    <div class="card-body">
        <form action="" method="POST">
            <label for="nome">Nome: </label>
            <input type="text" name="nome" class="form-control" required>
            <label for="email">Email: </label>
            <input type="email" name="email" class="form-control" required>
            <label for="senha">Senha: </label>
            <input type="password" name="senha" class="form-control" required>
            <label for="senha2">Repita a sua senha: </label>
            <input type="password" name="senha2" class="form-control" required>
            <label for="eAdmin">Perfil: </label>
            <input type="text" name="eAdmin" class="form-control" placeholder="Digite 'Admin' ou 'Usuario'" required>
            <br>
            <button type="submit" class="btn btn-success">Criar conta</button> 
        </form>
        <a href="/usuarios/login"><button class="btn btn-success">Logar</button></a>
        <a href="/"><button class="btn btn-success">Voltar</button></a>
    </div>
 
</div>